@model FarmCentral.Models.FarmerViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-6 txt-primary mb-4">@ViewBag.EditMessage</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FarmerEmail" />
            <div class="form-group">
            </div>
            <div class="form-group">
                <label asp-for="FarmerName" class="control-label"></label>
                <input asp-for="FarmerName" type="text" class="form-control" />
                <span asp-validation-for="FarmerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FarmerPassword" class="control-label"></label>
                <input asp-for="FarmerPassword" type="password" placeholder="(Unchanged)" class="form-control" />
                <span asp-validation-for="FarmerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FarmerPasswordConfirmation" class="control-label"></label>
                <input asp-for="FarmerPasswordConfirmation" type="password" placeholder="(Unchanged)" class="form-control" />
                <span asp-validation-for="FarmerPasswordConfirmation" class="text-danger"></span>
            </div>
            <p class="text-danger">
                @ViewBag.EditError
            </p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn button-primary button-grow mb-4 crud-button" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewBag.EditMessage == "Edit Account")
    {
        <input class="btn button-secondary button-grow crud-button" type="button" value="Back" onclick="location.href='@Url.Action("Index", "Farmers")'" />
    }
    else
    {
        <input class="btn button-secondary button-grow crud-button" type="button" value="Back" onclick="location.href='@Url.Action("Index", "Employees")'" />
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
