@model FarmCentral.Models.FarmerViewModel

@{
    ViewData["Title"] = "Add Farmer";
}

<h1 class="display-6 txt-primary mb-4">Add Farmer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FarmerEmail" class="control-label">Email</label>
                <input asp-for="FarmerEmail" type="email" class="form-control" required/>
                <span asp-validation-for="FarmerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FarmerName" class="control-label">Name</label>
                <input asp-for="FarmerName" type="text" class="form-control" required/>
                <span asp-validation-for="FarmerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FarmerPassword" class="control-label">Password</label>
                <input asp-for="FarmerPassword" type="password" class="form-control" required/>
                <span asp-validation-for="FarmerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FarmerPasswordConfirmation" class="control-label">Confirm Password</label>
                <input asp-for="FarmerPasswordConfirmation" type="password" class="form-control" required/>
                <span asp-validation-for="FarmerPasswordConfirmation" class="text-danger"></span>
            </div>
            <p class="text-danger">
                @ViewBag.FarmerError
            </p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn button-primary button-grow mb-4 crud-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <input class="btn button-secondary button-grow crud-button" type="button" value="Back" onclick="location.href='@Url.Action("Index", "Employees")'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
