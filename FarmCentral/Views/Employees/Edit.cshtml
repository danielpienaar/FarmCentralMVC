@model FarmCentral.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Edit Account";
}

<h1 class="display-6 txt-primary mb-4">Edit Account</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeEmail" />
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label">Name</label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePassword" class="control-label">New Password</label>
                <input type="password" asp-for="EmployeePassword" placeholder="(Unchanged)"  class="form-control" />
                <span asp-validation-for="EmployeePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePasswordConfirmation" class="control-label">Confirm New Password</label>
                <input type="password" asp-for="EmployeePasswordConfirmation" placeholder="(Unchanged)" class="form-control" />
                <span asp-validation-for="EmployeePasswordConfirmation" class="text-danger"></span>
            </div>
            <p class="text-danger">
                @ViewBag.EditError
            </p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn button-primary button-grow mb-4 crud-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <input class="btn button-secondary button-grow crud-button" type="button" value="Back" onclick="location.href='@Url.Action("Index", "Employees")'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
