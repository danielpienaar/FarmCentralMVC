<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farm Central</title>
    <link rel="icon" href="@Url.Content("~/img/tree.ico")"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/TimeManagementWebApp.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container container-fluid">
                <span class="pad-right navbar-brand button-grow" @*asp-area="" asp-controller="" asp-action=""*@><img src="~/img/tree.png" alt="" width="60" height="60"></span>
                @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between border-3 border-start">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" id="Title">
                            <span class="nav-link txt-primary button-grow" @*asp-area="" asp-controller="" asp-action=""*@>Farm Central</span>
                        </li>
                    </ul>
                </div>
                <!-- Employee account settings dropdown -->
                <div class="dropdown">
                    <label for="account" class="accountLabel txt-secondary button-grow">Account Settings</label>
                    <div class="dropdown-content">
                        <a class="" asp-area="" asp-controller="Home" asp-action="Edit">Edit Account</a>
                        <a class="" asp-area="" asp-controller="Home" asp-action="Delete">Delete Account</a>
                    </div>
                </div>
                <input class="ms-4 btn button-outline-secondary button-grow" type="button" value="Log Out" onclick="location.href='@Url.Action("LogOut", "Home")'" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
